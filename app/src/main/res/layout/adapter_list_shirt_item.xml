<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/small_size"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_shirt_product_image_height"
            tools:src="@drawable/dummy_image"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium_size"
            android:paddingLeft="@dimen/medium_x_size"
            android:paddingTop="@dimen/medium_x_size"
            android:paddingRight="@dimen/medium_x_size"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/grey_dark"
            tools:text="Product name"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small_size"
            android:layout_marginTop="@dimen/small_size"
            android:paddingLeft="@dimen/medium_x_size"
            android:paddingBottom="@dimen/medium_x_size"
            android:textStyle="normal"
            tools:text="$150"/>

    </LinearLayout>

</android.support.v7.widget.CardView>